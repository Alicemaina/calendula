<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_pharmacies_map"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="es.usc.citius.servando.calendula.pharmacies.activities.PharmaciesMapActivity">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/map"
        tools:context=".MapsActivity"
        android:name="com.google.android.gms.maps.SupportMapFragment" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/pharmacies_search_bar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:background="@android:color/white">

        <AutoCompleteTextView
            android:id="@+id/search_pharmacies_text"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:padding="10dp"
            android:hint="Search Pharmacies"
            android:textColor="@android:color/black"
            android:background="@android:color/white"
            android:drawableLeft="@drawable/places_ic_search">
        </AutoCompleteTextView>

        <com.mikepenz.iconics.view.IconicsButton
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/center_map_pharmacies"
            android:text="{gmd-my_location}"
            android:textSize="20dp"/>

    </RelativeLayout>

    <com.getbase.floatingactionbutton.FloatingActionButton
        xmlns:fab="http://schemas.android.com/apk/res-auto"
        android:id="@+id/pharmaciesList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="28dp"
        android:layout_marginBottom="38dp"
        fab:fab_icon="@drawable/ic_list"
        fab:fab_colorNormal="#efefef"
        fab:fab_colorPressed="#b7b7b7"
        />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_pharmacies_map"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="es.usc.citius.servando.calendula.pharmacies.activities.PharmaciesMapActivity">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/get_pharmacy_route"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="140dp"
        android:layout_marginRight="5dp"
        android:paddingTop="3dp"
        android:scaleType="center"
        app:backgroundTint="#169E58"
        />

    <com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:sothree="http://schemas.android.com/apk/res-auto"
        android:id="@+id/sliding_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        sothree:umanoDragView="@+id/dragView"
        sothree:umanoOverlay="false"
        sothree:umanoPanelHeight="175dp"
        sothree:umanoParalaxOffset="100dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/map"
                tools:context=".MapsActivity"
                android:name="com.google.android.gms.maps.SupportMapFragment"/>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/pharmacies_search_bar"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="30dp"
                android:background="@android:color/white">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:id="@+id/search_pharmacies_image"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="5dp"/>

                    <ProgressBar
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:paddingLeft="5dp"
                        android:id="@+id/search_pharmacies_loading"
                        android:layout_gravity="center_vertical"
                        android:indeterminate="true"
                        android:visibility="gone" />

                    <EditText
                        android:id="@+id/search_pharmacies_text"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:padding="10dp"
                        android:layout_gravity="center_vertical"
                        android:hint="Search Pharmacies"
                        android:textColor="@android:color/black"
                        android:background="@android:color/white">
                    </EditText>
                </LinearLayout>

                <com.mikepenz.iconics.view.IconicsButton
                    android:id="@+id/clear_search_pharmacies"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="2dp"
                    android:paddingLeft="2dp"
                    android:layout_marginTop="5dp"
                    style="?android:attr/borderlessButtonStyle"
                    android:text="{gmd-close}"
                    android:textSize="20dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="15dp">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/center_map_pharmacies"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/pharmacies_list_button"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="bottom|right"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="10dp"
                    android:paddingTop="4dp"
                    android:scaleType="center"
                    app:backgroundTint="#ffffff"
                    />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/pharmacies_list_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom|right"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:paddingTop="3dp"
                    android:scaleType="center"
                    app:backgroundTint="#ffffff"
                    />

            </RelativeLayout>

        </RelativeLayout>

        <!-- SLIDING LAYOUT -->
        <LinearLayout
            android:id="@+id/dragView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:clickable="true"
            android:focusable="false"
            android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/fragment_contenedor"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom"
                    android:layout_centerHorizontal="true">
                </RelativeLayout>
        </LinearLayout>

    </com.sothree.slidinguppanel.SlidingUpPanelLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/pharmacies_list"
        android:visibility="gone">
    </RelativeLayout>

</RelativeLayout>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="es.usc.citius.servando.calendula.pharmacies.fragments.PharmacyMarkerDetailsFragment"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <com.getbase.floatingactionbutton.FloatingActionButton
            xmlns:fab="http://schemas.android.com/apk/res-auto"
            android:id="@+id/get_pharmacy_route"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="top|right"
            android:layout_marginRight="5dp"
            android:padding="0dp"
            android:scaleType="center"
            fab:fab_colorNormal="#ffffff"
            fab:fab_colorPressed="#dedede"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pharmacy_time"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="80dp"
            android:text="tempo ata destino"/>

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:id="@+id/pharmacy_name"
            android:paddingTop="35dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pharmacy_name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/clock_icon"
                android:text="r"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pharmacy_state"
                android:text="estado"
                android:layout_marginRight="40dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pharmacy_hour"
                android:text="horario"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/clock_icon"
                android:layout_toEndOf="@+id/clock_icon" />
        </RelativeLayout>

    </RelativeLayout>


</FrameLayout>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="es.usc.citius.servando.calendula.pharmacies.fragments.PharmacyMarkerDetailsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <com.getbase.floatingactionbutton.FloatingActionButton
            xmlns:fab="http://schemas.android.com/apk/res-auto"
            android:id="@+id/get_pharmacy_route"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="top|right"
            app:layout_anchorGravity="bottom|right|end"
            android:layout_marginRight="5dp"
            android:padding="0dp"
            android:scaleType="center"
            fab:fab_colorNormal="#169E58"
            fab:fab_colorPressed="#dedede"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:id="@+id/pharmacy_name"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pharmacy_name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/layout_hours">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/clock_icon"
                android:text="{gmd-time}"
                android:textSize="20dp"
                android:paddingLeft="35dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pharmacy_state"
                android:text="ABERTA"
                android:textAppearance="@style/medium_bold"
                android:textColor="@color/android_green_dark"
                android:textSize="15dp"
                android:layout_marginRight="40dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pharmacy_hour"
                android:textSize="15dp"
                android:text="09:00 - 15:00\n16:00 - 21:00"
                android:textColor="@color/black"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/clock_icon"
                android:layout_toEndOf="@+id/clock_icon"/>
        </RelativeLayout>

        <View
            android:id="@+id/gray_bar"
            android:layout_marginLeft="80dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@id/layout_hours"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pharmacy_time"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="80dp"
            android:textSize="15dp"
            android:textColor="@color/android_blue_dark"
            android:text="12 min"
            android:layout_below="@id/gray_bar"/>

    </RelativeLayout>


</FrameLayout>

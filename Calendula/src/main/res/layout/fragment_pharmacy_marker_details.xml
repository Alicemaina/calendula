<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="es.usc.citius.servando.calendula.pharmacies.fragments.PharmacyMarkerDetailsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <com.getbase.floatingactionbutton.FloatingActionButton
            xmlns:fab="http://schemas.android.com/apk/res-auto"
            android:id="@+id/get_pharmacy_route"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            app:layout_anchorGravity="bottom|right|end"
            android:layout_marginRight="5dp"
            android:paddingTop="3dp"
            android:scaleType="center"
            fab:fab_colorNormal="#169E58"
            fab:fab_colorPressed="#dedede"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:id="@+id/pharmacy_name"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pharmacy_name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/layout_hours">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/clock_icon"
                android:text="{gmd-time}"
                android:textSize="20dp"
                android:paddingLeft="35dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pharmacy_state"
                android:text="ABERTA"
                android:textAppearance="@style/medium_bold"
                android:textColor="@color/android_green_dark"
                android:textSize="15dp"
                android:layout_marginRight="40dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pharmacy_hour"
                android:textSize="15dp"
                android:text="09:00 - 15:00\n16:00 - 21:00"
                android:textColor="@color/black"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/clock_icon"
                android:layout_toEndOf="@+id/clock_icon"/>
        </RelativeLayout>

        <GridLayout
            android:id="@+id/layout_timetravels"
            android:layout_marginLeft="80dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="1"
            android:columnCount="4"
            android:layout_alignParentBottom="true">

            <View
                android:layout_columnSpan="4"
                android:id="@+id/gray_bar"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="3dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/layout_time_car">

                <com.mikepenz.iconics.view.IconicsImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="2dp"
                    app:iiv_color="@android:color/darker_gray"
                    app:iiv_icon="gmd-directions_car"
                    android:id="@+id/icon_car"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pharmacy_time_car"
                    android:layout_toRightOf="@id/icon_car"
                    android:textSize="15dp"
                    android:textColor="@color/android_blue_dark"
                    android:text="12 min" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/layout_time_bike"
                android:layout_toRightOf="@id/layout_time_car">

                <com.mikepenz.iconics.view.IconicsImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="2dp"
                    app:iiv_color="@android:color/darker_gray"
                    app:iiv_icon="gmd-directions_bike"
                    android:id="@+id/icon_bike"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pharmacy_time_bike"
                    android:layout_toRightOf="@id/icon_bike"
                    android:textSize="15dp"
                    android:textColor="@color/android_blue_dark"
                    android:text="5 hours" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/layout_time_walking"
                android:layout_toRightOf="@id/layout_time_bike">

                <com.mikepenz.iconics.view.IconicsImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="2dp"
                    app:iiv_color="@android:color/darker_gray"
                    app:iiv_icon="gmd-directions_walk"
                    android:id="@+id/icon_walking"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pharmacy_time_walking"
                    android:layout_toRightOf="@id/icon_walking"
                    android:textSize="15dp"
                    android:textColor="@color/android_blue_dark"
                    android:text="3 days" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:id="@+id/layout_time_public"
                android:layout_toRightOf="@id/layout_time_walking">

                <com.mikepenz.iconics.view.IconicsImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="2dp"
                    app:iiv_color="@android:color/darker_gray"
                    app:iiv_icon="gmd-directions_subway"
                    android:id="@+id/icon_public"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pharmacy_time_public"
                    android:layout_toRightOf="@id/icon_public"
                    android:textSize="15dp"
                    android:textColor="@color/android_blue_dark"
                    android:text="25 min" />
            </RelativeLayout>

        </GridLayout>

    </RelativeLayout>


</FrameLayout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/bg"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#fff"
                tools:context="es.usc.citius.servando.calendula.activities.PatientSummaryActivity">


    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="fill_parent"
        android:layout_height="260dp"
        android:background="@color/android_blue_dark">

        <View
            android:id="@+id/patient_avatar_bg"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>

        <ImageView
            android:id="@+id/patient_avatar"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="60dp"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/avatar_default"
            android:transitionName="transition"/>

        <TextView
            android:id="@+id/patient_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/patient_avatar"
            tools:text="Patient Name Placeholder"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true"
            android:textSize="22sp"
            />

    </RelativeLayout>


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="@dimen/status_bar_height"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:paddingBottom="10dp"
            android:paddingTop="6dp">

            <RelativeLayout
                android:id="@+id/current_medicines_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:paddingRight="16dp"
                android:paddingTop="15dp">

                <com.mikepenz.iconics.view.IconicsImageView
                    android:id="@+id/ic_current_medicines"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:iiv_icon="gmd-calendar"
                    android:layout_marginLeft="16dp"
                    tools:src="@drawable/ic_edit_black_48dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="72dp"
                    android:layout_toRightOf="@+id/ic_current_medicines"
                    android:gravity="center_vertical"
                    android:textAllCaps="false"
                    android:textColor="#000"
                    android:textIsSelectable="false"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:text="@string/patient_current_medicines"/>

                <TextView
                    android:id="@+id/current_medicines_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="false"
                    android:layout_below="@+id/ic_current_medicines"
                    android:layout_marginLeft="72dp"
                    android:layout_toRightOf="@+id/ic_med_stock"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center_vertical"
                    android:textColor="@color/dark_grey_text"
                    android:textSize="16dp"
                    tools:text="List of medicines that the patient is currently taking."/>

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>


    <View
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/top"
        android:alpha="0.4"
        android:background="@drawable/presentation_box_shadow_top"/>


</RelativeLayout>
